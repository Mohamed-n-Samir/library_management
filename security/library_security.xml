<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_library" model="res.groups.privilege">
        <field name="name">Library</field>
        <field name="description">Library Management System</field>
        <field name="sequence">100</field>
    </record>

    <record id="group_library_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="module_category_library"/>
        <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
        <field name="comment">Library users can view and manage basic library operations.</field>
    </record>

    <record id="group_library_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="module_category_library"/>
        <field name="implied_ids" eval="[(4,ref('group_library_user'))]"/>
        <field name="comment">Library managers have full access to all library features.</field>
    </record>

</odoo>
