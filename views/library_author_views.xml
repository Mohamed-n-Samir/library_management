<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_author_view_list" model="ir.ui.view">
        <field name="name">library.author.list</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <list string="Authors">
                <field name="name"/>
                <field name="book_count" string="Books"/>
            </list>
        </field>
    </record>

    <record id="library_author_view_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Author">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Author Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="book_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Biography" name="biography">
                            <field name="biography" placeholder="Enter author biography..."/>
                        </page>
                        <page string="Books" name="books">
                            <field name="book_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="isbn"/>
                                    <field name="publication_date"/>
                                    <field name="status" widget="badge" 
                                           decoration-success="status == 'available'"
                                           decoration-warning="status == 'rented'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_author_view_search" model="ir.ui.view">
        <field name="name">library.author.search</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <search string="Search Authors">
                <field name="name"/>
                <separator/>
                <filter string="Has Books" name="has_books" domain="[('book_count', '>', 0)]"/>
            </search>
        </field>
    </record>

    <record id="library_author_action" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first author!
            </p>
            <p>
                Authors are linked to books in the library catalog.
            </p>
        </field>
    </record>
</odoo>